{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "@theme/*": [".vitepress/theme/*"]
    }
  },
  "include": ["env.d.ts", ".vitepress/**/*", ".vitepress/**/*.vue", "src/**/*"],
  "exclude": ["node_modules", ".vitepress/cache", ".vitepress/dist"]
}
